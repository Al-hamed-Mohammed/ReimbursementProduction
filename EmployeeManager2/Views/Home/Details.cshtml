@model HomeDetailsViewModel

@{

    ViewBag.Title = "Employee Details";
    var photoPath = "~/Images/" + (Model.Employee.PhotoPath ?? "Publication1.jpg");

   
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Employee ID:  @Model.Employee.Id</h4>
                <h4>Email:  @Model.Employee.Email</h4>
                <h4>Department:  @Model.Employee.Department</h4>
                @if (Model.Employee.ReceiptDate.HasValue)
                {
                    <h4>Receipt Date:   @Model.Employee.ReceiptDate.Value.ToString("MM-dd-yyyy")</h4>
                }
                else
                {
                    <h4>Receipt Date:</h4>
                }
                @if (Model.Employee.ReimburseDate.HasValue)
                {
                    <h4>Reimburse Date:   @Model.Employee.ReimburseDate.Value.ToString("MM-dd-yyyy") </h4>
                    
                }
                else
                {
                    <h4>Reimburse Date:</h4>
                }


                <h4>Receipt Amount:  @Model.Employee.ReceiptAmount </h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index"
                   class="btn btn-primary">Back</a>
                <a asp-action="edit" asp-controller="home"
                   asp-route-id="@Model.Employee.Id" class="btn btn-primary" asp-route-foo="bar">Edit</a>
                <a asp-action="delete" asp-controller="home" asp-route-id="@Model.Employee.Id" asp-route-foo="bar"
                   class="btn btn-danger m-1" onclick="return confirm('Are you sure delete')">Delete</a>
            </div>
        </div>
    </div>
</div>






